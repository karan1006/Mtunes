<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.mtunes.HomeScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1"
        >

     <ImageView

          style="@style/CategoryStyle"
         android:layout_weight="0.5"
         android:src="@mipmap/romance"
         android:scaleType="fitXY"
         android:elevation="8dp"
         android:onClick="romanceGenre"
        />

        <ImageView

            style="@style/CategoryStyle"
            android:layout_weight="0.5"
            android:src="@mipmap/party"
            android:scaleType="fitXY"
            android:onClick="partyGenre"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <ImageView

            style="@style/CategoryStyle"
            android:layout_weight="0.5"
            android:src="@mipmap/road"
            android:scaleType="fitXY"
            android:onClick="roadGenre"/>

        <ImageView

            style="@style/CategoryStyle"
            android:layout_weight="0.5"
            android:src="@mipmap/bhangra"
            android:scaleType="fitXY"
            android:onClick="bhangraGenre"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <TextView
            android:background="#000000"
            style="@style/CategoryStyle"
            android:layout_weight="0.5"
            />

        <TextView
            android:background="#fff"
            style="@style/CategoryStyle"
            android:layout_weight="0.5" />


    </LinearLayout>

   </LinearLayout>
